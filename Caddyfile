{$CADDY_HOST} {
	route /api* {
		uri strip_prefix /api
		reverse_proxy http://api:8081
	}

	route /api/ws {
		@upgrade {
			header Connection *Upgrade*
			header Upgrade websocket
		}

		uri strip_prefix /api/ws
		reverse_proxy http://api:8081/ws
	}

	reverse_proxy http://app:8080
}

{$CADDY_MONDAY_HOST} {
    reverse_proxy http://monday:8082
}